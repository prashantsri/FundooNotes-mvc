
@{
    Layout = "";
}
<div>
    <md-dialog aria-label="Verify">
        <form name="myForm">
            <md-toolbar>
                <div class="md-toolbar-tools">
                    <h2>Verify OTP</h2>
                    <span flex></span>
                    <md-button class="md-icon-button" ng-click="cancel()">
                        <md-icon md-svg-src="~/img/ic_close_24px.svg" aria-label="Close dialog"></md-icon>
                    </md-button>
                </div>
            </md-toolbar>

            <md-dialog-content>
                <div class="md-dialog-content" layout="row">
                 
                    <md-input-container class="md-block">
                            <label>OTP</label>
                            <input type="text" name="otp" ng-model="otp"   required />
                            <div ng-messages="myForm.otp.$error">
                                <p ng-message="required">OTP is required</p>
                            </div>

                        </md-input-container>
                </div>
            </md-dialog-content>

            <md-dialog-actions layout="row">

                <md-button ng-click="answer('Submit')" ng-disabled=" myForm.otp.$invalid">
                    Submit
                </md-button>
            </md-dialog-actions>
        </form>
    </md-dialog>
</div>

